{% extends 'base.html.twig' %}

{% block title %}Player Details | {{ player.Name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                <img src="{{ asset('images/football-player.png') }}" alt="{{ player.Name }}" class="img-fluid">
            </div>
            <div class="col-md-8">
            <label>Player Details</label>
                <h1 class="mt-4 mt-md-0">{{ player.Name }} {{ player.Surname }}, {{ player.Team.Name }} </h1>
